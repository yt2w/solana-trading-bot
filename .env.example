# ===============================================================
#                        SOLANA TRADING BOT CONFIGURATION
# ===============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===============================================================


# -----------------------------------------------------------------
# TELEGRAM BOT SETTINGS
# -----------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Restrict bot to specific chat IDs (comma-separated)
# Leave empty for public access
ALLOWED_CHAT_IDS=

# -----------------------------------------------------------------
# SOLANA NETWORK
# -----------------------------------------------------------------
# Network: mainnet-beta, devnet, testnet
SOLANA_NETWORK=mainnet-beta

# RPC Endpoint - Use a paid provider for production!
# Free: https://api.mainnet-beta.solana.com (rate limited)
# Paid: Helius, QuickNode, Triton, Alchemy
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# WebSocket endpoint (optional, for real-time updates)
SOLANA_WS_URL=

# -----------------------------------------------------------------
# SECURITY & ENCRYPTION
# -----------------------------------------------------------------
# 64-character hex string - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_SECRET=

# 32-character hex string - Generate with: python -c "import secrets; print(secrets.token_hex(16))"
ENCRYPTION_SALT=

# -----------------------------------------------------------------
# TRADING SETTINGS
# -----------------------------------------------------------------
# Start in paper trading mode (no real money)
PAPER_TRADING=true

# Platform fee percentage (0.5 = 0.5%)
PLATFORM_FEE_PERCENT=0.5

# Fee collection wallet (Solana address)
FEE_WALLET_ADDRESS=

# -----------------------------------------------------------------
# RISK MANAGEMENT
# -----------------------------------------------------------------
# Maximum single trade size in SOL
MAX_TRADE_SIZE_SOL=10.0

# Maximum portfolio percentage per trade
MAX_POSITION_PERCENT=25.0

# Default slippage tolerance (%)
DEFAULT_SLIPPAGE=1.0

# Daily loss limit in SOL (0 = disabled)
DAILY_LOSS_LIMIT_SOL=0

# -----------------------------------------------------------------
# JUPITER DEX SETTINGS
# -----------------------------------------------------------------
# Jupiter API version
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Priority fee (micro-lamports) - Higher = faster confirmation
PRIORITY_FEE=50000

# -----------------------------------------------------------------
# MEV PROTECTION (Optional)
# -----------------------------------------------------------------
# Enable Jito MEV protection
JITO_ENABLED=false

# Jito tip amount in SOL
JITO_TIP_SOL=0.0001

# -----------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------
# SQLite database path (relative to project root)
DATABASE_PATH=data/trading_bot.db

# -----------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/bot.log

# -----------------------------------------------------------------
# OPTIONAL FEATURES
# -----------------------------------------------------------------
# Enable DCA (Dollar Cost Averaging)
DCA_ENABLED=true

# Enable copy trading
COPY_TRADING_ENABLED=true

# Enable price alerts
ALERTS_ENABLED=true
